// to delete all instances of an element in an array
#include<stdio.h>
int main()
{

int a[100],n,i,j,p,r;
printf("Enter the size of the array :_");
scanf("%d",&n);
printf("Enter the elements of the array:_");

for(i=0;i<n;i++)
{
 scanf("%d",&a[i]);
}
printf("The array is:");
for(i=0;i<n;i++)
{
    printf("%d ",a[i]);

}
printf("\n");
printf("Enter the element to be removed :_");
scanf("%d",&r);
for(i=0;i<n;i++)
{
    if(a[i]==r)
       {
           p=i;
           for(j=p;j<n;j++)
           {
               a[j]=a[j+1];
           }
           n=n-1;

       }
}
printf("The new array is: ");
for(i=0;i<n;i++)
{
    printf("%d ",a[i]);
}
}
